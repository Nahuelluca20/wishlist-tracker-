generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at   DateTime? @db.Timestamptz(6)
  title        String
  hearts       Int?      @default(0)
  image_url    String?
  product_link String
  price        Float?    @default(0) @db.Real
}

model users {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at DateTime? @db.Timestamptz(6)
}
